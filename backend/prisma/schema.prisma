generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

/// Enumeración para roles de usuario
enum UserRole {
  OWNER
  MANAGER
  MECHANIC
}

/// Enumeración para estado de ordenes de trabajo
enum StateOrder {
  OPEN
  IN_PROGRESS
  DONE
  CANCELLED
}

/// Enumeración para las líneas de orden (WorkOrderItems)
enum WorkItemType {
  service
  part
}

enum StockMovementType {
  in
  out
  adjust
}

enum AppointmentStatus {
  scheduled
  confirmed
  cancelled
  done
}

enum PaymentStatus {
  pending
  paid
  overdue
}

enum NotificationChannel {
  email
  // sms y push comentados temporalmente
  // Se habilitarán en fase 2 cuando se implementen los proveedores
  // (Twilio para SMS, Firebase para Push)
  // sms
  // push
}

enum NotificationStatus {
  pending
  sent
  failed
}

/// Tenant:Garage
model Garage {
  id                String   @id @default(uuid())
  name              String
  legalName         String?
  fiscalId          String   @unique
  phone             String?
  street            String?
  city              String?
  postalCode        String?
  province          String?
  country           String?
  timezone          String   @default("Europe/Madrid")
  currency          String   @default("EUR")
  taxRate           Decimal  @default(21.00) @db.Decimal(5, 2)
  invoiceNextNumber BigInt   @default(1)
  isActive          Boolean  @default(true)
  contactInfo       Json     @default("{}")
  metadata          Json     @default("{}")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt()
// adminUserId puede ser NULL durante el proceso de onboarding
// Permite crear el garage primero, luego el primer usuario,
// y finalmente establecer la relación admin sin dependencias circulares
  adminUserId       String?

  adminUser User? @relation("GarageAdmin", fields: [adminUserId], references: [id], onDelete: SetNull)

  users          User[]                @relation("GarageUsers")
  clients        Client[]              @relation("GarageClients")
  vehicles       Vehicle[]             @relation("GarageVehicles")
  orders         WorkOrders[]          @relation("GarageOrders")
  services       Service[]             @relation("GarageServices")
  consumables    Consumable[]          @relation("GarageConsumables")
  workOrderItems WorkOrderItem[]       @relation("GarageWorkOrderItems")
  stockMovements StockMovement[]       @relation("GarageStockMovements")
  appointments   Appointment[]         @relation("GarageAppointments")
  invoices       Invoice[]             @relation("GarageInvoices")
  notifications  NotificationHistory[] @relation("GarageNotifications")
}

/// tabla Users (Dueño, Gestor, mecánicos)
model User {
  id                  String    @id @default(uuid())
  garageId            String
  name                String
  email               String
  passwordHash        String?
  rol                 UserRole
  emailVerified       Boolean   @default(false)
  invitationToken     String?
  invitationExpiresAt DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  garage Garage @relation("GarageUsers", fields: [garageId], references: [id], onDelete: Cascade)

  ordersCreated  WorkOrders[]    @relation("OrdersCreatedBy")
  ordersAssigned WorkOrders[]    @relation("OrdersAssignedTo")
  stockMovements StockMovement[] @relation("UserMovements")
  appointments   Appointment[]   @relation("UserAppointments")
  
  // garagesOwned permite que un usuario sea admin de múltiples garages
  // Casos de uso: franquicias, consultores, testing con múltiples tenants
  garagesOwned   Garage[]        @relation("GarageAdmin")

  @@unique([garageId, email])
}

/// Tabla Clients
model Client {
  id        String   @id @default(uuid())
  garageId  String
  name      String
  email     String
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  garage Garage @relation("GarageClients", fields: [garageId], references: [id], onDelete: Cascade)

  vehicles     Vehicle[]     @relation("VehicleClients")
  orders       WorkOrders[]  @relation("ClientOrders")
  appointments Appointment[] @relation("ClientAppointments")
  invoices     Invoice[]     @relation("ClientInvoices")

  @@unique([garageId, email])
}

/// Tabla Vehicles
model Vehicle {
  id           String   @id @default(uuid())
  garageId     String
  clientId     String
  licensePlate String
  brand        String?
  model        String?
  color        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  garage Garage @relation("GarageVehicles", fields: [garageId], references: [id], onDelete: Cascade)
  client Client @relation("VehicleClients", fields: [clientId], references: [id], onDelete: Cascade)

  orders       WorkOrders[]  @relation("VehicleOrders")
  appointments Appointment[] @relation("VehicleAppointments")

  @@unique([garageId, licensePlate])
}

/// Tabla Work Orders (Ordenes de trabajo de un taller)
model WorkOrders {
  id               String     @id @default(uuid())
  garageId         String
  vehicleId        String
  clientId         String
  createdBy        String
  assignedMechanic String?
  description      String
  openingDate      DateTime   @default(now())
  closingDate      DateTime?
  state            StateOrder @default(OPEN)
  totalAmount      Decimal    @default(0) @db.Decimal(12, 2)
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  workOrderItems WorkOrderItem[] @relation("OrderItems")

  garage        Garage  @relation("GarageOrders", fields: [garageId], references: [id], onDelete: Cascade)
  vehicle       Vehicle @relation("VehicleOrders", fields: [vehicleId], references: [id], onDelete: Cascade)
  client        Client  @relation("ClientOrders", fields: [clientId], references: [id], onDelete: Cascade)
  orderCreated  User?   @relation("OrdersCreatedBy", fields: [createdBy], references: [id], onDelete: Restrict)
  orderAssigned User?   @relation("OrdersAssignedTo", fields: [assignedMechanic], references: [id], onDelete: SetNull)

  // Nota: La consistencia multi-tenant (vehicle.garageId = workOrder.garageId
  // y assignedMechanic.garageId = workOrder.garageId) se garantiza mediante:
  // 1. Validación en la capa de servicio (verificar pertenencia al tenant)
  // 2. Opcionalmente con Row Level Security (RLS) en PostgreSQL (fase futura)
  // 3. Filtrado manual en queries: WHERE garageId = user.garageId
}

/// Tabla Services (catálogo de servicios por tenant:garage)
model Service {
  id                     String   @id @default(uuid())
  garageId               String
  name                   String
  isHourly               Boolean  @default(false)
  unitPrice              Decimal  @db.Decimal(12, 2)
  defaultDurationMinutes Int      @default(60)
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  workOrderItems WorkOrderItem[] @relation("ServiceOrderItems")

  garage Garage @relation("GarageServices", fields: [garageId], references: [id], onDelete: Cascade)

  @@unique([garageId, name])
}

/// Tabla Consumables (partes /repuestos)
model Consumable {
  id                String   @id @default(uuid())
  garageId          String
  supplierReference String?
  name              String
  currentStock      Int      @default(0)
  minimum_stock     Int      @default(0)
  unitCost          Decimal  @db.Decimal(12, 2)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  workOrderItems WorkOrderItem[] @relation("ConsumableOrderItems")
  stockMovements StockMovement[] @relation("ConsumableMovements")

  garage Garage @relation("GarageConsumables", fields: [garageId], references: [id], onDelete: Cascade)

  @@unique([garageId, name])
}

/// Tabla WorkOrderItems (líneas de orden: servicio o parte)
model WorkOrderItem {
  id              String       @id @default(uuid())
  garageId        String
  workOrderId     String
  
  // serviceId y consumableId son mutuamente excluyentes según itemType
  // Validación de negocio:
  // - Si itemType='service' → serviceId NOT NULL, consumableId NULL
  // - Si itemType='part' → consumableId NOT NULL, serviceId NULL
  // Esta lógica se implementa en la capa de servicio (DTOs + validación),
  // no mediante CHECK constraints de DB para mayor flexibilidad
  serviceId       String?
  consumableId    String?
  itemType        WorkItemType
  quantity        Decimal      @db.Decimal(12, 2)
  unitPriceAtTime Decimal      @db.Decimal(12, 2)
  notes           String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  stockMovements StockMovement[] @relation("OrderItemMovements")
  invoicesLines  InvoiceLines[]  @relation("OrderItemInvoicesLines")

  garage     Garage      @relation("GarageWorkOrderItems", fields: [garageId], references: [id], onDelete: Cascade)
  workOrder  WorkOrders  @relation("OrderItems", fields: [workOrderId], references: [id], onDelete: Cascade)
  service    Service?    @relation("ServiceOrderItems", fields: [serviceId], references: [id], onDelete: Restrict)
  consumable Consumable? @relation("ConsumableOrderItems", fields: [consumableId], references: [id], onDelete: Restrict)
}

/// Tabla StockMovement (Movimientos de stock de un taller)
model StockMovement {
  id              String            @id @default(uuid())
  garageId        String
  
  // workOrderItemId es opcional porque los movimientos de stock
  // pueden ocurrir sin estar ligados a una orden de trabajo:
  // - Compras directas de inventario
  // - Ajustes de inventario por conteo físico
  // - Devoluciones a proveedores
  workOrderItemId String?
  createdBy       String
  consumableId    String
  movementType    StockMovementType
  quantity        Int
  reference       String? // libre (orden de compra, proveedor, etc)
  createdAt       DateTime          @default(now())

  garage        Garage         @relation("GarageStockMovements", fields: [garageId], references: [id], onDelete: Cascade)
  workOrderItem WorkOrderItem? @relation("OrderItemMovements", fields: [workOrderItemId], references: [id], onDelete: Restrict)
  createdByUser User           @relation("UserMovements", fields: [createdBy], references: [id], onDelete: Restrict)
  consumable    Consumable     @relation("ConsumableMovements", fields: [consumableId], references: [id], onDelete: Restrict)
}

/// Tabla Appointment (Citas de un taller)
model Appointment {
  id         String            @id @default(uuid())
  garageId   String
  
  // vehicleId y clientId son obligatorios (a diferencia del SQL original)
  // Decisión de diseño: una cita SIN vehículo y cliente no tiene sentido
  // para el flujo de negocio, mejora integridad de datos y simplifica queries
  vehicleId  String
  clientId   String
  mechanicId String?
  startAt    DateTime
  endAt      DateTime?
  status     AppointmentStatus @default(scheduled)
  notes      String?
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt

  garage   Garage  @relation("GarageAppointments", fields: [garageId], references: [id], onDelete: Cascade)
  vehicle  Vehicle @relation("VehicleAppointments", fields: [vehicleId], references: [id], onDelete: Restrict)
  client   Client  @relation("ClientAppointments", fields: [clientId], references: [id], onDelete: Restrict)
  mechanic User?   @relation("UserAppointments", fields: [mechanicId], references: [id], onDelete: Restrict)
}

/// Tabla Invoice (Facturas de un taller)
model Invoice {
  id            String        @id @default(uuid())
  garageId      String
  clientId      String
  invoiceNumber String
  totalAmount   Decimal       @default(0) @db.Decimal(12, 2)
  paymentStatus PaymentStatus @default(pending)
  issuedAt      DateTime      @default(now())
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  invoiceLines InvoiceLines[] @relation("InvoicesLines")

  garage Garage @relation("GarageInvoices", fields: [garageId], references: [id], onDelete: Cascade)
  client Client @relation("ClientInvoices", fields: [clientId], references: [id], onDelete: Restrict)

  @@unique([garageId, invoiceNumber])
}

/// Tabla InvoiceLines (Lineas individuales de un factura, cada servicio, pieza o concepto a cobrar)
model InvoiceLines {
  id              String   @id @default(uuid())
  invoiceId       String
  description     String
  quantity        Int      @default(1)
  unitPrice       Decimal  @db.Decimal(12, 2)
  workOrderItemId String?
  createdAt       DateTime @default(now())

  invoice       Invoice        @relation("InvoicesLines", fields: [invoiceId], references: [id], onDelete: Cascade)
  workOrderItem WorkOrderItem? @relation("OrderItemInvoicesLines", fields: [workOrderItemId], references: [id], onDelete: Restrict)
}

/// Tabla NotificationHistory (Notificaciones al cliente)
model NotificationHistory {
  id          String              @id @default(uuid())
  garageId    String
  
  // Relación polimórfica: permite que una notificación se asocie
  // con diferentes tipos de entidades (WorkOrder, Appointment, Invoice)
  // sin crear múltiples FKs específicas.
  // relatedType indica el tipo de entidad ('work_order', 'appointment', 'invoice')
  // relatedId almacena el UUID de la entidad específica
  // La resolución de la relación se hace manualmente en la capa de aplicación
  relatedType String
  relatedId   String?
  
  channel     NotificationChannel
  recipient   String
  payload     Json?
  status      NotificationStatus  @default(pending)
  attempts    Int                 @default(0)
  lastError   String?
  sentAt      DateTime?
  createdAt   DateTime            @default(now())

  garage Garage @relation("GarageNotifications", fields: [garageId], references: [id], onDelete: Cascade)

  // Índice compuesto para optimizar queries frecuentes que filtran
  // notificaciones por garage y tipo de entidad relacionada
  @@index([garageId, relatedType, relatedId])
}
